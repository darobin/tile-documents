{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Tile Documents",
  "version": "0.1.0",
  "identifier": "ing.dasl.tile",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:5173",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Tile Documents",
        "width": 1200,
        "height": 800,
        "minWidth": 600,
        "minHeight": 400
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "fileAssociations": [
      {
        "ext": ["tile"],
        "name": "Tile Document",
        "description": "Web Tile Document",
        "role": "Viewer",
        "mimeType": "application/tile"
      }
    ]
  }
}
